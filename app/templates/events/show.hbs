<section>

    <div class="container">

      <form class="section">
        <div class="container columns">
          <div class="container column is-5" style="margin-left: 29%;">
            <div class="has-text-centered has-green-border">
              <h1 class="has-text-weight-bold is-size-3">{{model.name}}</h1>
            </div>
          </div>
        </div>
        <div class="container">




          <div class="columns is-2">
            <div class="column is-10 is-offset-1 columns">
              <div class="column is-3 has-colored-border first-row push-left">
                <img src="{{model.pic}}" class="profile-img"/>
              </div>
                <div class="column is-9 has-colored-border first-row">
                  <div class="columns">
                    <div class="column is-2">
                      <div class="field" for="dish">
                        <label class="label">Instructor</label>
                        <p>{{model.instructor}}</p>
                      </div>
                      <div class="field">
                        <label class="label" for="city">Class Location</label>
                        <p>{{model.city}}</p>
                      </div>
                      <div class="field" for="dish">
                        <label class="label">Class Dish</label>
                        {{model.dish}}
                      </div>
                   </div>
                   <div class="column is-2">
                     <div class="field" for="Date">
                       <label class="label">Date</label>
                      {{moment-format model.date 'MM/DD/YYYY'}}
                     </div>
                     <div class="field">
                       <label class="label" for="city">Time</label>
                       <p>{{model.time}}</p>
                     </div>
                     <div class="field">
                       <label class="label" for="spots">Spots</label>
                       {{model.spots}}
                     </div>
                  </div>
                   <div class="column is-4">
                     <div class="field">
                       <label class="label" for="description">Description</label>
                       <p>{{model.description}}</p>
                     </div>
                  </div>
                  <div class="column is-4">
                    <div class="field">
                      <label class="label" for="ingredients">What to bring</label>
                      <p>{{model.ingredients}}</p>
                    </div>
                 </div>
                 </div>
                </div>
              </div>
            </div>
          </div>
        </form>

      <div class="field is-grouped columns is-centered">
        <div class="control"><br />
          <button type="submit" {{action "save" model}} class="button is-warning is-medium is-super-warning">Participate</button>
          <button type="submit" class="button is-warning is-medium is-super-warning">Message</button>
        </div>
      </div>

    </div>
</section>
