<div class="section list-section">
  <div class="container">
    <div class="columns">
      <div class="column is-10 is-offset-1 columns">
        <h1 class="has-text-weight-bold is-size-3">Events near me</h1>
      </div>
    </div>
    <div class="columns">
      <div class="column is-10 is-offset-1 columns">
        <div class="column is-4">
          <div class="field">
           <label class="label has-text-weight-normal" style="display: inline-block;">Distance from me</label>
             <p class="control" style="display: inline-block; top: -5px; margin-left: 5px;">
               <span class="select" >
                 <select>
                 <option>0-10km</option>
                 <option>10-20km</option>
                 <option>20-30km</option>
                 <option>40-50km</option>
                 </select>
             </span>
           </p>
         </div>
       </div>
        <button type="button" class="button is-primary is-small geolocate-button" style="margin-left: -60px; margin-top: 10px;" {{action 'getUserLocation'}}>Geolocate me!</button>

      </div>
    </div>
  </div>
</div>



{{#each model as |event|}}
  <div class="section list-section">
    <div class="container">
      <div class="columns">
        <div class="column is-10 is-offset-1 columns">

          <div class="column is-3 has-colored-border first-row push-left">
            <img src="{{event.pic}}" />
          </div>
            <div class="column is-9 has-colored-border first-row">
              <h3 class="is-size-4 has-text-weight-bold is-event-header-inline">{{event.name}}</h3>
              <div class="columns">
                <div class="column is-4">
                  <div class="field" for="dish">
                    <label class="label">Instructor</label>
                    <p>Donald Ive</p>
                  </div>
                  <div class="field">
                    <label class="label" for="city">Location</label>
                    <p>Coquitlam, BC</p>
                  </div>
                  <div class="field" for="dish">
                    <label class="label">Class Dish</label>
                    {{event.dish}}
                  </div>
               </div>

               <div class="column is-4">
                 <div class="field">
                   <label class="label" for="description">Description</label>
                   <p>{{event.description}}</p>
                 </div>
              </div>
              <div class="column is-4">
                <div class="control"><br /><br />
                  {{#link-to "events.show" event}}
                    <button class="button is-warning is-medium is-super-warning event-list-button">See Event</button>
                  {{/link-to}}
                  <button class="button is-warning is-medium is-super-warning event-list-button">Message</button>

                </div>
             </div>
             </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{{/each}}
