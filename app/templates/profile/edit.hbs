<section>
  <br />
<div class="container">
<form class="section">

  <div class="container">
    <div class="columns is-2">
      <div class="column is-8 is-offset-2 columns">
        <div class="column is-4 has-colored-border first-row push-left upload-button" style="padding: 0; max-height: 254px;">
          {{profile-upload fileUrl=sessionUser.user.pic placeholderUrl="" onchange=(action (mut sessionUser.user.pic))}}
        </div>
          <div class="column is-8 has-colored-border first-row" style="width: 65%">
            <div class="columns" style="padding: 20px 0px;">
              <div class="column is-6">
                <div class="field" for="name">
                  <label class="label">Name</label>
                  {{input value=sessionUser.user.name id="name" placeholder="" class="input"}}
                </div>
                <div class="field">
                  <label class="label" for="city">Location</label>
                  {{input value=sessionUser.user.address id="city" placeholder="location" class="input"}}
                </div>

                <div class="field">
                  <label class="label">Specialty</label>
                  {{input value=sessionUser.user.specialty id="specialty" placeholder="" class="input"}}
                </div>
             </div>
             <div class="column is-6">
               <div class="field">
                 <label class="label">Bio</label>
                 {{textarea value=sessionUser.user.biography id="bio" placeholder="Tell us something about yourself!" class="textarea"}}
               </div>
            </div>
           </div>
          </div>
        </div>
      </div>
    </div>
  <div class="container">
    <div class="columns">
      <div class="column is-8 is-offset-2 columns">
        <div class="column is-12 has-colored-border reviews columns" style="min-height: 240px;">
          <label class="label">Reviews</label>
            <div class="column is-5 is-offset-3">
              <p class="no-reviews has-text-grey-light">No reviews yet! Creat an event and start your Pear Up experience!</p>
            </div>
        </div>
      </div>
    </div>
  </div>
  </form>

<div class="field is-grouped columns is-centered">
  <div class="control"><br />
    <button type="submit" {{action "submit"}} class="button is-warning is-medium is-super-warning">Submit</button>
  </div>
</div>
</div>
</section>
