<form class="section">
  <div class="container columns">
    <div class="container column is-5" style="margin-left: 29%;">
      <div class="has-text-centered has-green-border">
        <h1 class="has-text-weight-bold is-size-3">{{event.name}}</h1>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="columns is-2">
      <div class="column is-10 is-offset-1 columns">
        <div class="column is-3 has-colored-border first-row push-left" style="padding: 0; max-height: 254px;">
          <img src="{{event.pic}}" class="profile-img" />
        </div>
          <div class="column is-9 has-colored-border first-row">
            <div class="columns">
              <div class="column is-2">
                <div class="field" for="dish">
                  <label class="label">Instructor</label>
                  <p>{{event.instructor}}</p>
                </div>
                <div class="field">
                  <label class="label" for="city">Class Location</label>
                  <p>{{event.city}}</p>
                </div>
                <div class="field" for="dish">
                  <label class="label">Class Dish</label>
                  {{event.dish}}
                </div>
             </div>
             <div class="column is-2">
               <div class="field" for="Date">
                 <label class="label">Date</label>
                 {{moment-format event.date 'MM/DD/YYYY'}}
               </div>
               <div class="field">
                 <label class="label" for="city">Time</label>
                 {{event.time}}
               </div>
               <div class="field">
                 <label class="label" for="spots">Spots</label>
                 {{event.spots}}
               </div>
            </div>
             <div class="column is-4">
               <div class="field">
                 <label class="label" for="description">Description</label>
                 <p>{{event.description}}</p>
               </div>
            </div>
            <div class="column is-4">
              <div class="field">
                <label class="label" for="ingredients">What to bring</label>
                <p>{{event.ingredients}}</p>
              </div>
           </div>
           </div>
          </div>
        </div>
      </div>
    </div>
  </form>

<div class="field is-grouped columns is-centered">
  <div class="control"><br />
    {{#link-to "owner-events.edit" event}}
      <button type="submit" class="button is-warning is-medium is-super-warning">Edit</button>
    {{/link-to}}
  </div>
</div>
